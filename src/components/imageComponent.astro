---
import Image from "astro/components/Image.astro";

export interface ImageProps {
    src: string;
    alt?: string;
    width?: any;
    height?: any;
    loading?: "lazy" | "eager";
    class?: string; 
}

const { src, alt = "", width, height, loading = "lazy", class: className } = Astro.props; 
---
<Image
    src={src}
    alt={alt}
    width={width ? width : undefined} 
    height={height ? height : undefined} 
    loading={loading}
    class={className}
/>
